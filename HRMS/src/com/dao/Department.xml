<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dao.Department">
    <insert id="addDepartment">
        INSERT INTO DEPARTMENT VALUES (DEPA_SEQ.nextval,#{name},#{cratetime})
    </insert>
    <update id="updateDepartment">
        UPDATE  DEPARTMENT set NAME =#{name} where D_ID=#{id}
    </update>
    <delete id="deleteDepartment">
        DELETE from DEPARTMENT where D_ID=#{id}
    </delete>
    <select id="AllDepartment" resultType="com.dao.Department">
        select * from DEPARTMENT
    </select>
</mapper>